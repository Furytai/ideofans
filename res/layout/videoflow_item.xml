<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
	       android:descendantFocusability="blocksDescendants" 
           android:layout_width="match_parent"
           android:layout_height="300dp">
		   <SurfaceView
		      android:id="@+id/videoflow_view"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"/>
		    <ImageView 
    	    android:id="@+id/videoflow_bmp"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"/>
		    <RelativeLayout
		       android:id="@+id/videoflow_aboveLayout" 
		       android:layout_width="match_parent"
	     	   android:layout_height="300dp">
		     	   <LinearLayout 
		     	       android:layout_alignParentTop="true"
		     	       android:background="#44000000"
		     	       android:layout_width="match_parent"
		     	       android:layout_height="30dp">
		     	       <TextView 
		     	           android:paddingLeft="3dp"
		     	           android:ellipsize="end"
		     	           android:layout_gravity="left|center"
					       android:id="@+id/videoflow_videotitle"
					       android:layout_width="wrap_content"
					       android:layout_height="wrap_content"				       
					       android:text="video_title"
					       android:textSize="20sp"/>
		     	   </LinearLayout>
		     	   <ImageButton
			    	    android:id="@+id/videoflow_button"
			    	    android:layout_width="wrap_content"
			    	    android:layout_height="wrap_content"
			    	    android:layout_centerInParent="true" 
			    	    android:src="@drawable/play"/>
		      </RelativeLayout>    
    </FrameLayout>
	<TextView android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/videoflow_text"
	    android:padding="3dp"
	    android:gravity="left"
	    android:ellipsize="end"
	    android:text="content"
	    android:textSize="20sp"/>
	    
</LinearLayout>
